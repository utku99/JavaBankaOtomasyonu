package Model;

import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.sql.SQLException;
import java.sql.Statement;
import java.util.ArrayList;

public class Müþteri extends User {
	String bakiye, iban, hesaptürü;


	public Müþteri(int id, String tcno, String name, String password, String type, String bakiye, String iban,String hesaptürü) {
		super(id, tcno, name, password, type);
		this.bakiye = bakiye;
		this.iban = iban;
		this.hesaptürü = hesaptürü;
	}

	

	public Müþteri(String tcno, String bakiye, String iban, String hesaptürü) {
		super(tcno);
		this.bakiye = bakiye;
		this.iban = iban;
		this.hesaptürü = hesaptürü;
	}

	
	public ArrayList<Müþteri> getHesapList() throws SQLException {
		ArrayList<Müþteri> list = new ArrayList<>();
		Connection con = conn.connDb();
		Statement st = null;
		ResultSet rs = null;
		Müþteri obj;
		try {
			st = con.createStatement();
			rs = st.executeQuery("SELECT * FROM hesap WHERE tcno = '2'");
			while (rs.next()) {
				obj = new Müþteri(rs.getString("tcno"), rs.getString("bakiye"), rs.getString("iban"),rs.getString("hesaptürü"));
				list.add(obj);
			}
		} catch (SQLException e) {
			e.printStackTrace();
		} finally {
			st.close();
			rs.close();
			con.close();
		}
		return list;
	}
	
	
	public boolean updateHesap(String tcno, String bakiye, String iban, String hesaptürü) throws SQLException {
		Connection con = conn.connDb();
		Statement st = null;
		ResultSet rs = null;
		PreparedStatement preparedStatement = null;
		String query = "UPDATE hesap SET bakiye =?,iban=?,hesaptürü=? WHERE tcno=?";
		boolean key = false;
		try {
			st = con.createStatement();
			preparedStatement = con.prepareStatement(query);
			preparedStatement.setString(1, bakiye);
			preparedStatement.setString(2, iban);
			preparedStatement.setString(3, hesaptürü);
			preparedStatement.setString(4, tcno);
			preparedStatement.executeUpdate();
			key = true;
		} catch (Exception e) {
			e.printStackTrace();
		}

		if (key)
			return true;
		else
			return false;
	}
	
	
	
}
